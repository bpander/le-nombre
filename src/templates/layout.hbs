<!doctype html>
<!--
    Build information
    Version: {{version}}
    Date: {{date}}
    Environment: {{env}}
-->
<html class="no-js" lang="en-us">
<head>
    <title>numbario - Math Puzzle Game</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="numbario is a game about combining numbers to make another number. There's no time limit or ultimate goal. Just relax, have fun, and enjoy solving one puzzle after another." />
    <meta name="author" content="" />
    <!--[if IE]><meta http-equiv="cleartype" content="on" /><![endif]-->

    <!-- Open Graph -->
    <meta property="og:url"         content="https://numbario.com" />
    <meta property="og:type"        content="game" />
    <meta property="og:title"       content="numbario" />
    <meta property="og:description" content="numbario is a game about combining numbers to make another number. There's no time limit or ultimate goal. Just relax, have fun, and enjoy solving one puzzle after another." />
    <meta property="og:image"       content="https://numbario.com/favicon.png" />


    <link rel="manifest" href="manifest.json">

    <!-- Touch Icons - iOS and Android -->
    <link rel="apple-touch-icon" sizes="192x192" href="favicon.png?v={{version}}" />

    <!-- All other browsers -->
    <link rel="icon" type="image/png" sizes="192x192" href="favicon.png?v={{version}}" />

    {{#block "styles"}}
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600" />
        <link rel="stylesheet" media="screen, projection" href="assets/styles/modern.css?v={{version}}" />
    {{/block}}

    {{#if GOOGLE_AD_CLIENT}}
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <script>
        (adsbygoogle = window.adsbygoogle || []).push({
            google_ad_client: "{{GOOGLE_AD_CLIENT}}",
            enable_page_level_ads: true
        });
        </script>
    {{/if}}
</head>

<body>
    <div class="visually-hidden">
        <!-- inject:svg --><!-- endinject -->
    </div>
    {{#block "body"}}
    {{/block}}

    <script>
        window.GLOBAL = {
            VERSION: '{{version}}',
        };
    </script>

    {{#block "scriptsBody"}}
        <script src="assets/scripts/vendor.js?v={{version}}"></script>
        <script src="assets/scripts/main.js?v={{version}}"></script>
    {{/block}}
</body>
</html>
